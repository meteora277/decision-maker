<body>

  <%- include('partials/_header') %>

  <section class = "results-page">
    <h2> Results </h2>
    <div id="results-list">

      <div class="response-results">


        <ul>
          <li class="result-title">
            <div class="result-label">
              Choice
            </div>
            <div class ="sum-title"> Points  </div>
          </li>

          <% const arr = []; %>
          <% for (let item of response) { %>
          <% } %>

          <% for (let item of response) { %>
            <li class="result-item"> <%= item.choice %>
              <div class ="sum"> <%= item.sum %>  </div>
            </li>
          <% } %>
          </ul>
        </div>
        <br>
        <% let filteredArray = names.filter(item => item.name !== null) %>
        <% if (filteredArray.length !== 0) { %>
          <div class="who-voted">
            <h2><%='People that have voted so far' %></h2>
            <% for( let i = 0; i < names.length; i++) { %>
              <li class="voters">
                <%- names[i].name %>
              </li>
              <% } %>
              <% } %>
            </div>
          </div>
      </section>
    </body>
  </html>
